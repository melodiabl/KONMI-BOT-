# Environment
NODE_ENV=production

# Server Configuration
PORT=3001

# JWT Configuration
JWT_SECRETJWT_SECRET=whatsapp-bot-panel-secret-key-2025-change-in-production

# Database Configuration (SQLite is used by default)
DATABASE_PATH=./backend/full/storage/database.sqlite

# CORS Configuration
FRONTEND_URL=http://localhost:3000
RAILWAY_STATIC_URL=http://localhost:3000

# WhatsApp Bot Configuration
