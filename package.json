{
    "name": "whatsapp-bot-panel-backend",
    "version": "2.5.0",
    "description": "Backend para WhatsApp Bot Panel",
    "main": "index.js",
    "type": "module",
    "scripts": {
        "start": "node index.js",
        "dev": "nodemon index.js",
        "test": "NODE_OPTIONS=--experimental-vm-modules jest",
        "pairing:interactive": "node scripts/pairing-interactive.js",
        "pairing:direct": "node scripts/pairing-direct.js",
        "pairing:qr": "node scripts/pairing-qr.js",
        "cookies:brave": "node scripts/export-brave-cookies.js",
        "diag:yt": "node scripts/diag-yt.js",
        "test:apis": "node scripts/test-apis.js",
        "test:api": "node scripts/test-apis.js",
        "migrate": "knex migrate:latest",
        "migrate:rollback": "knex migrate:rollback",
        "seed": "knex seed:run",
        "debug:baileys": "node ./scripts/baileys-minimal.js",
        "pterodactyl:setup": "node reorganize-pterodactyl.js",
        "pterodactyl:clean": "rm -rf node_modules package-lock.json",
        "pterodactyl:init": "npm run pterodactyl:setup && npm install && npm run migrate",
        "verify:system": "node tools/verify-system.js",
        "db:backup": "node tools/backup-db.js",
        "postinstall": "echo Skipping Chromium download"
    },
    "dependencies": {
        "@distube/ytdl-core": "^4.16.12",
        "@google/generative-ai": "^0.24.1",
        "axios": "^1.11.0",
        "bcryptjs": "^2.4.3",
        "better-sqlite3": "^12.4.1",
        "chalk": "^5.3.0",
        "cors": "^2.8.5",
        "dotenv": "^16.6.1",
        "express": "^4.18.2",
        "express-rate-limit": "^7.1.5",
        "ffmpeg-static": "^5.2.0",
        "fluent-ffmpeg": "^2.1.3",
        "helmet": "^7.1.0",
        "insta-fetcher": "^1.3.35",
        "jimp": "^0.16.1",
        "jsonwebtoken": "^9.0.2",
        "knex": "^3.0.1",
        "multer": "^1.4.5-lts.1",
        "node-fetch": "^3.3.2",
        "nodemon": "^3.0.2",
        "pg": "^8.16.3",
        "pino": "^9.12.0",
        "pino-pretty": "^13.1.1",
        "qrcode": "^1.5.4",
        "qrcode-terminal": "^0.12.0",
        "sharp": "^0.34.5",
        "simple-update-notifier": "^2.0.0",
        "sqlite3": "^5.1.7",
        "systeminformation": "^5.27.10",
        "wileys": "^0.4.2",
        "winston": "^3.11.0",
        "yt-search": "^2.13.1",
        "ytdl-core": "^4.11.5"
    },
    "devDependencies": {
        "jest": "^30.2.0",
        "supertest": "^7.1.4"
    },
    "engines": {
        "node": ">=16.0.0"
    }
}
