{
  "name": "whatsapp-bot-panel",
  "version": "1.0.0",
  "description": "Panel de control para bot de WhatsApp con versiones full y lite",
  "type": "module",
  "scripts": {
    "start": "npm run start:production",
    "start:production": "cd backend/full && npm run migrate && node index.js",
    "start:full": "cd backend/full && node index.js",
    "start:lite": "cd backend/lite && node index.js",
    "dev:full": "nodemon backend/full/index.js",
    "dev:lite": "nodemon backend/lite/index.js",
    "dev:frontend": "cd frontend-panel && npm run dev",
    "dev": "nodemon backend/full/index.js",
    "dev:lite-mode": "concurrently \"npm run dev:lite\" \"npm run dev:frontend\"",
    "install:all": "npm install && cd frontend-panel && npm install",
    "build": "cd frontend-panel && npm run build",
    "build:production": "cd frontend-panel && npm run build",
    "postinstall": "cd frontend-panel && npm install && cd .. && node scripts/git-hooks/setup-git-hooks.js",
    "clean:invisibles": "node scripts/encoding/clean-invisibles.js",
    "clean:check": "node scripts/encoding/clean-invisibles.js --check",
    "hooks:install": "node scripts/git-hooks/setup-git-hooks.js",
    "encoding:check": "node scripts/encoding/check-encoding.mjs --all",
    "encoding:fix": "node scripts/encoding/fix-encoding.mjs --all",
    "encoding:verify": "node scripts/encoding/verify-all-files.mjs",
    "encoding:verify-fix": "node scripts/encoding/verify-all-files.mjs --fix",
    "safe-edit": "node scripts/encoding/safe-edit.mjs",
    "test:api": "node scripts/testing/test-api.js",
    "railway:init": "node scripts/railway-init.js",
    "railway:build": "npm run railway:init",
    "migrate": "npx knex migrate:latest --knexfile backend/full/knexfile.js",
    "migrate:make": "npx knex migrate:make --knexfile backend/full/knexfile.js"
  },
  "dependencies": {
    "@chakra-ui/icons": "^2.2.4",
    "@chakra-ui/react": "^3.24.0",
    "@google/generative-ai": "^0.21.0",
    "@hapi/boom": "^10.0.1",
    "@whiskeysockets/baileys": "^6.7.18",
    "axios": "^1.11.0",
    "baileys-mod": "github:nstar-y/bail",
    "bcryptjs": "^2.4.3",
    "body-parser": "^2.2.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.21.2",
    "jsonwebtoken": "^9.0.1",
    "knex": "^3.1.0",
    "node-cache": "^5.1.2",
    "pg": "^8.11.3",
    "pino": "^8.21.0",
    "pino-pretty": "^10.3.1",
    "qrcode": "^1.5.4",
    "qrcode-terminal": "^0.12.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-router-dom": "^7.7.1",
    "react-scripts": "^0.0.0",
    "remove-accents": "^0.5.0",
    "sanitize-filename": "^1.6.3",
    "simple-update-notifier": "^1.0.7",
    "sqlite3": "^5.1.7",
    "strip-bom": "^5.0.0",
    "tweetnacl": "^1.0.3",
    "ws": "^8.18.3",
    "zero-width": "^1.0.29"
  },
  "devDependencies": {
    "@babel/plugin-transform-modules-commonjs": "^7.27.1",
    "@babel/preset-env": "^7.28.0",
    "@babel/preset-typescript": "^7.27.1",
    "@types/jest": "^30.0.0",
    "@vitejs/plugin-react": "^4.7.0",
    "concurrently": "^8.2.2",
    "glob": "^11.0.3",
    "jest": "^30.0.5",
    "nodemon": "^3.0.1",
    "ts-jest": "^29.4.1",
    "typescript": "^5.9.2",
    "vite": "^7.0.6"
  }
}
