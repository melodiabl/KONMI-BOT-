# Configuración del servidor
NODE_ENV=development
PORT=3000

# Configuración de la base de datos
DATABASE_URL=sqlite:./storage/database.sqlite

# Configuración de JWT
JWT_SECRET=tu-secreto-jwt-muy-seguro-aqui
JWT_EXPIRES_IN=7d

# Configuración de WhatsApp
WA_SESSION_NAME=bot-session
WA_AUTO_RECONNECT=true

# Configuración de logs
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Configuración de archivos
MAX_FILE_SIZE=50MB
UPLOAD_DIR=./storage/uploads

# Configuración de seguridad
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# Configuración de subbots
MAX_SUBBOTS=10
SUBBOT_TIMEOUT=1800000
CLEANUP_INTERVAL=300000
MAX_MEMORY_MB=512

# Configuración de Gemini AI
# Puedes usar cualquiera de estas variables. Prioridad: 1) GEMINI_API_KEY  2) GOOGLE_API_KEY  3) GENAI_API_KEY
GEMINI_API_KEY=your-gemini-api-key-here
# GOOGLE_API_KEY=your-gemini-api-key-here
# GENAI_API_KEY=your-gemini-api-key-here

# Modelo Gemini (opcional). Ejemplos: gemini-1.5-flash-latest, gemini-1.5-pro-latest
# Si no se define, se intentará con gemini-1.5-flash-latest y caídas automáticas.
# GEMINI_MODEL=gemini-1.5-flash-latest

# Configuración de Spotify (API oficial)
# Obtén estos valores en https://developer.spotify.com/dashboard
SPOTIFY_CLIENT_ID=
SPOTIFY_CLIENT_SECRET=
# Enviar audio de Spotify (preview) en /spotify. Por defecto: false
SPOTIFY_SEND_AUDIO=false
# Enviar la portada del álbum en /spotify. Por defecto: true
SPOTIFY_SEND_IMAGE=true
# Enviar un mensaje de texto final con el resumen (además del progreso). Por defecto: false
SPOTIFY_SEND_CAPTION=false

# Descargas YouTube (solo música/video)
# Si instalas yt-dlp en una ruta específica, define aquí el binario.
# Ejemplos:
#   Windows: YTDLP_PATH=C:\\Tools\\yt-dlp.exe
#   Linux:   YTDLP_PATH=/usr/local/bin/yt-dlp
YTDLP_PATH=

# Ruta opcional de ffmpeg si no está en PATH del sistema.
# Si usas ffmpeg-static no es necesario, pero puedes forzarla aquí.
# Ejemplos:
#   Windows: FFMPEG_PATH=C:\\ffmpeg\\bin\\ffmpeg.exe
#   Linux:   FFMPEG_PATH=/usr/bin/ffmpeg
FFMPEG_PATH=

# Envío rápido (sin descargar en el servidor)
# Si está en true, el bot enviará audio/video usando URL directa
# y simulará la barra (más rápido y confiable para editar).
MEDIA_FAST_SEND=true

# Mostrar preview de portada en el mensaje de progreso (editable)
# Si experimentas problemas al editar, ponlo en false para texto puro.
PROGRESS_PREVIEW=true
YT_REMOTE_ONLY=true

# YouTube cookies and extractor tuning (for yt-dlp)
# Provide a Netscape cookies file exported for youtube.com if needed
# to access age-restricted or region-limited formats.
# Example (Linux): YOUTUBE_COOKIES_FILE=/home/admin/KONMI-BOT-/backend/full/all_cookies.txt
# Alternatively you can set inline cookies header: YOUTUBE_COOKIES="name=value; other=value"
YOUTUBE_COOKIES_FILE=
# YTDLP user-agent and extractor args. Defaults should work, but you can override.
# Common extractor args example: youtube:player_client=web,android
YTDLP_USER_AGENT=
YTDLP_EXTRACTOR_ARGS=
# Optional PO token (see yt-dlp wiki: PO-Token-Guide) to enable android https formats
YTDLP_PO_TOKEN=

# Optional config file for yt-dlp (centralize flags)
# Windows: %APPDATA%\yt-dlp\config.txt  |  Linux: ~/.config/yt-dlp/config
# You can also place one per project and set the absolute path here
YTDLP_CONFIG_FILE=

# Downloader externo aria2c (opcional)
# Usa aria2c si está instalado. Para forzar su uso: true
YTDLP_USE_ARIA2C=false
# Tuning aria2c (solo aplica si aria2c está activo)
YTDLP_ARIA2C_CONNECTIONS=16
YTDLP_ARIA2C_SPLIT=16
YTDLP_ARIA2C_FILE_ALLOCATION=none
YTDLP_ARIA2C_EXTRA=

# Límites de descargas concurrentes
MEDIA_MAX_CONCURRENCY=3
MEDIA_PER_CHAT_CONCURRENCY=1

# Eventos de WhatsApp (opcional)
# Autorechazar llamadas entrantes (true|false)
AUTO_REJECT_CALLS=false
# Mensaje de bienvenida en grupos cuando alguien entra (true|false)
GROUP_WELCOME=false
# Mensaje de despedida en grupos cuando alguien sale (true|false)
GROUP_FAREWELL=false

# Presencia y lectura automática
PRESENCE_TYPING=true
AUTO_READ_MESSAGES=true

# Funcionalidades de Wileys
# Mostrar "escribiendo..." antes de enviar mensajes (más natural)
SHOW_TYPING=true

# Credenciales (ruta personalizada opcional)
# AUTH_DIR acepta ruta absoluta o relativa a backend/full
# Si se omite, usa ./storage/baileys_full o WA_SESSION_NAME para subcarpeta
AUTH_DIR=
WA_SESSION_NAME=baileys_full

# Store en memoria (persistencia opcional)
STORE_ENABLE=true
STORE_FILE=./storage/store.json
STORE_SAVE_INTERVAL_MS=60000

# Estilo y UX
STYLING_ENABLE=true
PREFER_EPHEMERAL_SECONDS=120

# Acceso a subbots (/qr y /code)
# Valores: all | owner (por defecto: all)
SUBBOTS_ACCESS=all

# Trazas en consola (terminal del bot principal)
# Muestra cada comando con usuario, chat y resultado
LOG_CONSOLE_TRACE=true

# Pairing (principal)
# Código de emparejamiento personalizado (se fuerza a mayúsculas y 8 chars)
# Puedes usar cualquiera: PAIR_CUSTOM_CODE, CUSTOM_PAIRING_CODE, PAIR_CODE, PAIRING_CODE
#PAIRING_CODE=ABCDEFGH
# Enforzar numérico (si true y el custom no es numérico de 8 dígitos, se genera uno)
PAIR_ENFORCE_NUMERIC=true
# Solo permitir pairing con código personalizado (no generar automático)
PAIRING_ONLY_CUSTOM=false
# Alias de compatibilidad
#ONLY_CUSTOM_PAIRING=false
